  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="link_0"/>
  </joint>

  <link name="link_0">
    <visual>
      <geometry>
        <box size="0.19 0.19 0.09"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="link_1">
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.095"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.045"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="joint_0" type="revolute">
    <parent link="link_0"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.045"/>
    <axis xyz="0 0 1"/>
    <limit effort="30" velocity="1.0" lower="-1" upper="1" />
  </joint>

  <link name="link_2">
    <visual>
      <geometry>
        <box size="0.08 0.065 0.24"/>
      </geometry>
      <origin rpy="0 0.78535 0" xyz="0.03 0 0.1"/>
