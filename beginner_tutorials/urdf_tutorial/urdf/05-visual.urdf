    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0.03 0 0.1"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" velocity="1.0" lower="-1" upper="1" />
  </joint>

  <link name="link_3">
    <visual>
      <geometry>
        <box size="0.08 0.065 0.22"/>
      </geometry>
      <origin rpy="0 1.13567 0" xyz="0.08 0 0.134"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="joint_2" type="revolute">s
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0.08 0 0.134"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" velocity="1.0" lower="-1" upper="1" />
  </joint>

</robot>
